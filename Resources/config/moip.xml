<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="payment.moip.class">Tear\MoipBundle\Services\Moip</parameter>
    </parameters>

    <services>
        <service id="payment.moip" class="%payment.moip.class%">
            <call method="setCredential">
                <argument>%payment.moip.credential%</argument> 
            </call>
            <call method="setEnvironment">
                <argument>%payment.moip.environment%</argument>
            </call>
        </service>
    </services>
</container>
